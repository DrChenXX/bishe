<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.bishe.mapper.FarmMapper">

    <resultMap id="BaseResultMap" type="com.example.bishe.model.entity.Farm">
            <result property="id" column="id" jdbcType="BIGINT"/>
            <result property="name" column="name" jdbcType="VARCHAR"/>
            <result property="admin_id" column="admin_id" jdbcType="BIGINT"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,name,admin_id
    </sql>
    <select id="searchByCondition" parameterType="com.example.bishe.model.entity.Farm" resultType="com.example.bishe.model.entity.Farm">
        select * from farm
        <where>
            <if test="id != 0">
                and id = #{id}
            </if>
            <if test="name != null">
                and name = #{name}
            </if>
            <if test="adminId != 0">
                and admin_id = #{adminId}
            </if>
        </where>
    </select>
</mapper>

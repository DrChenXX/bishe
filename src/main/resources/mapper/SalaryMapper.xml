<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.bishe.mapper.SalaryMapper">

    <resultMap id="BaseResultMap" type="com.example.bishe.model.entity.Salary">
            <result property="id" column="id" jdbcType="BIGINT"/>
            <result property="workerId" column="worker_id" jdbcType="BIGINT"/>
            <result property="time" column="time" jdbcType="DATE"/>
            <result property="number" column="number" jdbcType="BIGINT"/>
            <result property="note" column="note" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,worker_id,time,
        number,note
    </sql>

    <select id="searchByCondition" parameterType="com.example.bishe.model.entity.Salary" resultType="com.example.bishe.model.entity.Salary">
        select * from salary
        <where>
            <if test="id != 0">
                and id = #{id}
            </if>
            <if test="workerId != 0">
                and worker_id = #{workerId}
            </if>
        </where>
    </select>
</mapper>

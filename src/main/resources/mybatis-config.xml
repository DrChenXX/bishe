<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
    <properties resource="jdbc.properties"/>
    <!-- 配置 mybatis 输出日志，可以打印 sql-->
    <settings>
        <setting name="logImpl" value="STDOUT_LOGGING" />
    </settings>

    <!-- 配置环境 -->
    <environments default="mysql">
        <!-- 配置 mysql 的环境-->
        <environment id="mysql">
            <!-- 事务的类型-->
            <transactionManager type="JDBC"/>
            <!-- 配置数据源 POOLED:表示使用连接池 -->

            <dataSource type="POOLED">
                <!-- 配置连接数据库的信息 -->
                <property name="driver" value="${jdbc.driver}"/>
                <property name="url" value="${jdbc.url}"/>
                <property name="username" value="${jdbc.username}"/>
                <property name="password" value="${jdbc.password}"/>
            </dataSource>
        </environment>
    </environments>

    <!-- 指定映射配置文件的位置-->
    <mappers>
        <mapper resource="mapper/UserDao.xml"/>
        <mapper resource="mapper/FarmDao.xml"/>
        <mapper resource="mapper/AppealDao.xml"/>
        <mapper resource="mapper/MessageDao.xml"/>
        <mapper resource="mapper/NoticeDao.xml"/>
        <mapper resource="mapper/PicDao.xml"/>
        <mapper resource="mapper/SalaryDao.xml"/>
        <mapper resource="mapper/SingleColDao.xml"/>
        <mapper resource="mapper/SingleCutDao.xml"/>
        <mapper resource="mapper/TaskDao.xml"/>
        <mapper resource="mapper/WorkDao.xml"/>
        <mapper resource="mapper/WorkerDao.xml"/>
    </mappers>
</configuration>